<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3C3F41">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="Discovery"
        android:background="#fff"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#000"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:weightSum="3">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal"
           android:padding="5dp"
           android:weightSum="2">

           <androidx.cardview.widget.CardView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_margin="5dp"
               android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/hotel"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:text="Hotels"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:text="42 place"/>
                </LinearLayout>
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_margin="5dp"
               android:layout_weight="1">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:orientation="vertical">
                   <ImageView
                       android:layout_width="100dp"
                       android:layout_height="50dp"
                       android:layout_margin="5dp"
                       android:layout_gravity="center"
                       android:src="@mipmap/dinner"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:textSize="20dp"
                       android:textStyle="bold"
                       android:textColor="#000"
                       android:text="Fine Dining"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:textSize="15dp"
                       android:textStyle="bold"
                       android:text="15 place"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal"
           android:padding="5dp"
           android:weightSum="2">

           <androidx.cardview.widget.CardView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_margin="5dp"
               android:layout_weight="1">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:orientation="vertical">
                   <ImageView
                       android:layout_width="100dp"
                       android:layout_height="50dp"
                       android:layout_margin="5dp"
                       android:layout_gravity="center"
                       android:src="@mipmap/cafe"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:textSize="20dp"
                       android:textStyle="bold"
                       android:textColor="#000"
                       android:text="Cafes"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:textSize="15dp"
                       android:textStyle="bold"
                       android:text="28 place"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_margin="5dp"
               android:backgroundTint="#F8CD50"
               android:layout_weight="1">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:orientation="vertical">
                   <ImageView
                       android:layout_width="100dp"
                       android:layout_height="50dp"
                       android:layout_margin="5dp"
                       android:layout_gravity="center"
                       android:src="@mipmap/distance"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:textSize="20dp"
                       android:textStyle="bold"
                       android:textColor="#000"
                       android:text="Nearby"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:textSize="15dp"
                       android:textStyle="bold"
                       android:text="34 place"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal"
           android:padding="5dp"
           android:weightSum="2">

           <androidx.cardview.widget.CardView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_margin="5dp"
               android:layout_weight="1">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:orientation="vertical">
                   <ImageView
                       android:layout_width="100dp"
                       android:layout_height="50dp"
                       android:layout_margin="5dp"
                       android:layout_gravity="center"
                       android:src="@mipmap/fastfood"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:textSize="20dp"
                       android:textStyle="bold"
                       android:textColor="#000"
                       android:text="Fast Foods"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:textSize="15dp"
                       android:textStyle="bold"
                       android:text="29 place"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_margin="5dp"
               android:layout_weight="1">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:orientation="vertical">
                   <ImageView
                       android:layout_width="100dp"
                       android:layout_height="50dp"
                       android:layout_margin="5dp"
                       android:layout_gravity="center"
                       android:src="@mipmap/pizza"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:textSize="20dp"
                       android:textStyle="bold"
                       android:textColor="#000"
                       android:text="Featured Food"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:textSize="15dp"
                       android:textStyle="bold"
                       android:text="21 place"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>

       </LinearLayout>
   </LinearLayout>
</LinearLayout>